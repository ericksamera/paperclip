{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2023"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["chrome", "node"]
  },
  "include": [
    "services/server/paperclip/static/**/*.js",
    "extensions/chrome/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": ["**/*.min.js", "node_modules", "staticfiles", "data"]
}
